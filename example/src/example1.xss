XSelectors: 
  boxes (
  	"div a",
  	p+a,
  	span,
  	"ol li"
  	) 
  tabs (.tab, p+a, body)

XProperties:
  $depth-shadow (
    box-shadow="{5 * x}px {10 * x}px black";
    --webkit-blur=1px;
	display=block;
  )
  popup (
    z-index=10;
    border-radius=10%;
    $depth-shadow=3;
  )
/*
Rules:
  boxes, tabs : border=black; depth-shadow=1;
  .popup : popup; background-color=blue;
  boxes : background-color (=black; :hover=blue; :active=red;)
*/